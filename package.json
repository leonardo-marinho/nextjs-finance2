{
  "name": "next-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--require reflect-metadata' next dev --turbo",
    "build": "NODE_OPTIONS='--require reflect-metadata' next build",
    "start": "NODE_OPTIONS='--require reflect-metadata' next start",
    "lint": "next lint --fix --max-warnings=0",
    "lint:check": "next lint --max-warnings=0",
    "format": "prettier --write --ignore-path .gitignore .",
    "format:check": "prettier --check --ignore-path .gitignore .",
    "ts:check": "tsc --noemit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "prepare": "husky"
  },
  "prisma": {
    "schema": "src/lib/server/database/schema.prisma"
  },
  "dependencies": {
    "@fontsource/inter": "^5.1.0",
    "@headlessui/react": "^2.1.8",
    "@heroicons/react": "^2.1.5",
    "@prisma/client": "^5.20.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/themes": "^3.1.5",
    "@types/js-cookie": "^3.0.6",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "env-var": "^7.5.0",
    "firebase": "^10.13.1",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.3.0",
    "js-cookie": "^3.0.5",
    "js-sha256": "^0.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.453.0",
    "next": "^14.2.13",
    "next-api-decorators": "^2.0.2",
    "prisma": "^5.20.0",
    "radix-ui": "^1.0.1",
    "react": "^18",
    "react-dom": "^18",
    "react-swipeable": "^7.0.2",
    "react-toastify": "^10.0.6",
    "tailwind-merge": "^2.5.4"
